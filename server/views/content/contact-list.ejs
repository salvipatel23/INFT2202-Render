<h1 class="mb-5">Contact List</h1>

<!-- div.row>div.col>table.table.table-striped.table-boarded.table-hover>
     (thead.table-dark>tr>th[scope="col"]*6)+(tbody#contactList)
-->
<div class="row">
    <div class="col">

        <a href="/add" id="addButton" class="btn btn-primary btn-sm mb-1">
            <i class="fas fa-plus fa-sm">Add Contact</i>
        </a>

        <table class="table table-striped table-boarded table-hover">
            <thead class="table-dark">
            <tr>
                <th scope="col" class="text-center">#</th>
                <th scope="col">Full Name</th>
                <th scope="col">Contact Number</th>
                <th scope="col">Email Address</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody id="contactList">

            <% for (let count=0; count < contacts.length; count++) { %>
                <tr>
                    <th scope="row" class="text-center"><%= count+1 %></th>
                    <td><%= contacts[count].FullName %></td>
                    <td><%= contacts[count].ContactNumber %></td>
                    <td><%= contacts[count].EmailAddress %></td>

                    <td class="text-center">
                        <a href="/edit/<%= contacts[count]._id %>"
                            class="btn btn-primary btn-sm edit">
                                <i class="fas fa-edit fa-sm"> Edit</i>
                        </a>
                    </td>
                    <td>
                        <a href="/delete/<%= contacts[count]._id %>"
                           class="btn btn-danger btn-sm delete">
                            <i class="fas fa-trash-alt fa-sm"> Delete</i>
                        </a>
                    </td>

                </tr>
            <% } %>
            </tbody>
        </table>
    </div>
</div>
