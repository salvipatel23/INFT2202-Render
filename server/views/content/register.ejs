<div class="row">
    <div class="offset-md-3 col-md-6 col-sm-12">
        <div class="login" id="contentArea">
            <h1 class="display-4">Register</h1>

            <%if(messages.length > 0) {%>
                <div id="messageArea" className="alert alert-danger">
                    <%= messages %>
                </div>
            <% } %>

            <form id="registerForm" novalidate method="post">
                <p class="hint-text">Create your own account. It's free and only takes a minute.</p>

                <div class="form-group">
                    <p class="lead"><i class="fas far-user-shield"></i> Personal Information</p>

                    <div class="row">
                        <div class="col-md-6">
                            <input class="form-control" type="text" name="firstName" id="firstName" placeholder="First Name" required>
                        </div>
                        <div class="col-md-6">
                            <input class="form-control" type="text" name="lastName" id="lastName" placeholder="Last Name" required>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <input type="email" class="form-control" id="emailAddress" name="emailAddress" required
                                   value="" placeholder="Email">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <p class="lead"><i class="fas fa-database"></i> Personal Information</p>
                            <input type="text" class="form-control" id="username" name="username"  required
                                   value="" placeholder="Username">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <input type="password" class="form-control" id="password" name="password"  required
                                   value="" placeholder="Password">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"  required
                                   value="" placeholder="Confirm Password">
                        </div>
                    </div>
                </div>


                <div class="text-right">
                    <button id="submitButton" type="submit" class="btn btn-primary btn-lg"><i class="fas fa-user-plus"></i>
                        Register</button>
                    <button id="cancelButton" type="cancel" class="btn btn-warning btn-lg"><i class="fas fa-undo">
                        </i> Cancel</button>
                </div>
            </form>

        </div>
        <p class="text-center text-muted small">
            Already have an account?
            <a href="/login">Sign in</a>
        </p>
    </div>
</div>


